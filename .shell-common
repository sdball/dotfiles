  eval $theme
}

git() {
  if [[ "$*" =~ "pull" ]]; then
    echo "Don't git pull."
    return 0
  fi

  if [[ "$*" =~ "push --all" ]]; then
    echo "Don't git push --all."
    return 0
  fi

  command git $*
}

