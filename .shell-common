monitor-memory() {
  mkdir -p ~/.memory_logs
  local _name=`echo $1 | tr ' ' '-'`
  echo "TIME VSZ RSS"
  while true; do
    pgrep $1 | while read _pid; do
      if [[ ! -z $_pid ]]; then
        echo "`date +%s` `ps -o vsz,rss $_pid | rg -v 'VSZ'`" | tee -a ~/.memory_logs/"memory-$_name-$_pid.log"
      else
        (>&2 echo "process not found")
      fi
    done
    sleep 5
  done
}

