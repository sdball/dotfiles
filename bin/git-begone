#!/usr/bin/env bash

parse-options() {
  for opt in "$@"; do
    case "$opt" in
      -f|--force)
        _FORCE=1
        shift
        ;;
      -h|--help|*)
        echo "Usage: git begone"
        echo "  -f, --force       Actually delete branches"
        echo "  -h, --help        This help"
        exit 0
        ;;
    esac
  done
}

git-fetch-and-prune() {
  git fetch --prune >/dev/null 2>&1
}

local-git-branches() {
  git branch --list -vv
}

find-gone-branches() {
  rg -v '^\*' | rg -v develop | rg -v master | rg "\[.*: gone\]" | sed -E -e 's/^[ ]+//' | awk '{ print $1 }'
}

maybe-delete() {
  while read -r branch; do
    if [[ $_FORCE -eq 1 ]]; then
      echo "git branch -D \"$branch\""
      git branch -D "$branch"
    else
      echo "$branch is GONE on origin, run git begone -f to delete"
    fi
  done
}

main() {
  parse-options "$@"
  git-fetch-and-prune
  local-git-branches | find-gone-branches | maybe-delete
}

main "$@"
