#!/usr/bin/env bash

function usage() {
  echo "Usage: blog-post blog post title goes here"
  echo
  echo "blog-post will create a dated slug for the title in the same directory"
  echo
  echo "e.g."
  echo
  echo "blog-post title goes here -> 2022-01-01-title-goes-here.md"
  echo
  exit 0
}

[[ $# -eq 0 ]] && usage

case "$@" in
  -h|help) usage ;;
esac

filename="$(date +"%F")-$(slug "$@").md"
touch "$filename"

cat <<END > "$filename"
Tags: <tags go here>

# $@
END

