#!/usr/bin/env bash

function usage() {
  echo "Usage: blog-post blog post title goes here"
  echo
  echo "blog-post will create a draft slug for the title in the same directory"
  echo
  echo "e.g."
  echo
  echo "blog-post title goes here -- creates --> title-goes-here.md"
  echo
  exit 0
}

[[ $# -eq 0 ]] && usage

case "$@" in
  -h|help) usage ;;
esac

filename="$(slug "$@").md"
cat <<END > "$filename"
Draft: Yes
Tags: <tags go here>

# $@
END

