export GOPATH="$HOME/gopath"

# jif
export JIF_DIR=$HOME/Pictures/jifs

export BAT_THEME="Monokai Extended Origin"

# homebrew
HOMEBREW_INSTALL_CLEANUP=1
HOMEBREW_UPGRADE_CLEANUP=1

# actual history
export HISTSIZE=100000
export HISTFILE="$HOME/.history"
export SAVEHIST=$HISTSIZE

export EDITOR=vim
export WORDCHARS='*?[]~&;!$%^<>'
export ACK_COLOR_MATCH='red'

# e.g.
# curl $CURL_TIMING http://www.rakeroutes.com -so /dev/null
# dnslookup: 0.004624 | connect: 0.027739 | appconnect: 0.000000 | pretransfer: 0.027786 | starttransfer: 0.199989 | total: 0.200177 | size: 15063
export CURL_TIMING="-wdnslookup: %{time_namelookup} | connect: %{time_connect} | appconnect: %{time_appconnect} | pretransfer: %{time_pretransfer} | starttransfer: %{time_starttransfer} | total: %{time_total} | size: %{size_download}"

export RIPGREP_CONFIG_PATH="$HOME/.config/ripgrep/ripgreprc"
